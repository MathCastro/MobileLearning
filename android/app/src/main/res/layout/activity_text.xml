<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.TextActivity" android:background="#fffde7">

    <ScrollView
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
            android:id="@+id/scrollView2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    </ScrollView>
    <ListView
            android:id="@+id/text_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/scrollView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#fffde7"
            android:divider="#fffde7"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView2">
    </ListView>
    <android.support.design.widget.FloatingActionButton
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_plus_24"
            app:backgroundTint="@color/colorAccent"
            app:borderWidth="0dp" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="64dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="addText"/>

</android.support.constraint.ConstraintLayout>