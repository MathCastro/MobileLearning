<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.CalculatorActivity" android:background="#fffde7">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/firstOperand" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.483"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/secondOperand" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/firstOperand" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result" android:layout_marginBottom="316dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498" android:textSize="18sp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/soma" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/secondOperand"
            android:onClick="sum" android:background="@color/colorPrimary"
            android:textColor="#fffde7"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menos" app:layout_constraintStart_toEndOf="@+id/soma"
            android:layout_marginStart="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/secondOperand" android:onClick="sub"
            android:background="@color/colorPrimary" android:textColor="#fffde7"/>
    <Button
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mul"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/secondOperand" android:onClick="mul"
            android:background="@color/colorPrimary" android:textColor="#fffde7"
            app:layout_constraintEnd_toStartOf="@+id/div" android:layout_marginEnd="8dp"/>
    <Button
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/div"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/secondOperand" android:onClick="div"
            android:background="@color/colorPrimary" android:textColor="#fffde7"
    />
</android.support.constraint.ConstraintLayout>