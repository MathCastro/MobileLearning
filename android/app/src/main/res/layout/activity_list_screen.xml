<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ListScreen">

    <ScrollView
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
            android:id="@+id/scrollView2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    </ScrollView>
    <Button
            android:text="@string/calendar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button2" android:onClick="calendar"
            android:backgroundTint="@color/colorPrimary" android:textColor="#fffde7"/>
    <Button
            android:text="@string/calculator"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button3" app:layout_constraintHorizontal_bias="0.498"
            android:onClick="calculator"
            android:backgroundTint="@color/colorPrimary" android:textColor="#fffde7"/>
    <Button
            android:text="@string/idiom"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/scrollView2"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView2" android:onClick="idiom"
            android:backgroundTint="@color/colorPrimary" android:textColor="#fffde7"/>
    <Button
            android:text="Tab Bar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button3" android:onClick="tabBar"
            android:backgroundTint="@color/colorPrimary" android:textColor="#fffde7"/>
    <Button
            android:text="@string/text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button4" android:onClick="text"
            android:backgroundTint="@color/colorPrimary" android:textColor="#fffde7"/>
</android.support.constraint.ConstraintLayout>